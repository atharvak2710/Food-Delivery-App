<!-- res/drawable/rounded_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#F6C102" /> <!-- Change the color as needed -->
            <stroke
                android:width="3dp"
                /> <!-- Change the border color as needed -->
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#BCD3D3D3" /> <!-- Change the color as needed -->
            <stroke
                android:width="3dp"
             /> <!-- Change the border color as needed -->
        </shape>
    </item>

</selector>
